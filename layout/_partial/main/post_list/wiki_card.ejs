<%
function layoutDiv() {
  var el = '';
  el += '<article class="md-text">';
  if (proj.cover_config && proj.cover_config.length > 0){
    if (proj.cover_config === 'cover'){
      el = '<div class="cover">';
      el += '<img src="' + proj.cover + '"/>';
      el += '</div>';
      return el
    }else if (proj.cover_config === 'poster'){
      el += '<div class="post-cover">';
      el += '<img src="' + proj.cover + '"/>';
      el += '</div>';
    }
  }

  el += `<div class="preview"><img src="${proj.icon ? proj.icon : theme.default.project}"/></div>`
  el += '<div class="excerpt">';
  if (proj.tags && proj.tags.length > 0) {
    el += '<div class="caps">';
      for (let tag of proj.tags) {
        el += '<span class="cap breadcrumb"' + category_color(tag) + '>' + tag + '</span>';
      }
    el += '</div>';
  }
  el += '<h2 class="post-title">' + (proj.title || proj.name) + '</h2>';
  if (proj.description) {
    el += '<p>' + proj.description + '</p>';
  }
  el += '</div>';
  el += '</article>';
  return el;
}
%>
<%- layoutDiv() %>
